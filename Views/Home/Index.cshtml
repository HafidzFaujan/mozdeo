                                    <linearGradient id="shoeGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:0.9" />
                                        <stop offset="50%" style="stop-color:#E2E8F0;stop-opacity:0.8" />
                                        <stop offset="100%" style="stop-color:#CBD5E1;stop-opacity:0.7" />
                                    </linearGradient>
                                    <linearGradient id="soleGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" style="stop-color:#1E40AF;stop-opacity:0.8" />
                                        <stop offset="100%" style="stop-color:#2563EB;stop-opacity:0.6" />
                                    </linearGradient>
                                    <radialGradient id="sparkle">
                                        <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:1" />
                                        <stop offset="100%" style="stop-color:#60A5FA;stop-opacity:0" />
                                    </radialGradient>
                                </defs>
                            </svg>
